<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextTitleStyle">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ProgressBarStyle" parent="Widget.Material3.CircularProgressIndicator.Small">
        <item name="trackCornerRadius">4dp</item>
        <item name="indicatorColor">@color/green_secondary</item>
        <item name="trackColor">@color/green_light_secondary</item>
        <item name="trackThickness">4dp</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/TextTitleStyle</item>
    </style>

    <style name="LargeComponentStyle" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
    </style>

    <style name="MediumComponentStyle" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">16dp</item>
    </style>
</resources>