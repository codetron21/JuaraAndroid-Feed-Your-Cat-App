<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/orange_primary"
        app:title="@string/app_name" />

    <com.codetron.feedyourcat.common.view.SwitchTabView
        android:id="@+id/switch_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_rounded"
        android:paddingVertical="4dp"
        app:stv_color_tint_selected="@color/green_secondary"
        app:stv_tab_selected="tab_one"
        app:stv_text_tab_one="@string/tab_label_feed"
        app:stv_text_tab_two="@string/tab_label_cats" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>